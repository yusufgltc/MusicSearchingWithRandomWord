<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/numberPickerFragment">

    <fragment
        android:id="@+id/overviewFragment"
        android:name="com.example.android.musicsearchingwithrandomword.presenter.overview.OverviewFragment"
        android:label="fragment_overview"
        tools:layout="@layout/fragment_overview">
        <argument
            android:name="selectedNum"
            app:argType="integer"
            />
    </fragment>

    <fragment
        android:id="@+id/numberPickerFragment"
        android:name="com.example.android.musicsearchingwithrandomword.presenter.numberpicker.NumberPickerFragment"
        android:label="NumberPickerFragment"
        tools:layout="@layout/fragment_number_picker">
        <action
            android:id="@+id/action_numberPickerFragment_to_overviewFragment"
            app:destination="@id/overviewFragment"
            app:popUpTo="@id/numberPickerFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>